{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "src*": [
        "./packages/client/src*",
        "./packages/actions-lambda/src*",
        "./packages/websocket-disconnection-lambda/src*"
      ]
    }
  },
  "include": [
    "packages/**/*.ts"
  ]
}
