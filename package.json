{
  "name": "500",
  "version": "1.0.0",
  "description": "500 card game",
  "repository": {
    "url": "https://github.com/kirbyjs/500"
  },
  "main": "index.js",
  "author": "Kirby",
  "license": "MIT",
  "scripts": {
    "babel": "babel src --config-file ./babel/node.js --no-babelrc --out-dir lib --ignore \"src/ui,src/index.js\"",
    "build": "run-s clean && cross-env NODE_ENV=production run-p babel webpack:prod",
    "clean": "rm -rf ./lib ./assets/bundle",
    "eslint": "eslint .",
    "lint": "npm run eslint && npm run stylelint",
    "start": "npm run webpack:dev",
    "test": "cross-env NODE_ENV=test jest",
    "stylelint": "stylelint ./sass",
    "verify": "npm run lint && npm run test",
    "webpack:dev": "webpack-dev-server --config ./webpack/config/dev-server.js --hot",
    "webpack:prod": "webpack --config ./webpack/config/app.js"
  },
  "dependencies": {
    "config": "^3.2.5",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-css-modules-transform": "^1.6.2",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "css-loader": "^2.1.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "24.9.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^6.0.7",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0",
    "terser-webpack-plugin": "^2.3.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.2",
    "workbox-webpack-plugin": "^5.0.0"
  }
}
