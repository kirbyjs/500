{
  "private": true,
  "name": "500",
  "description": "500 card game",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/kirbyjs/500"
  },
  "main": "index.js",
  "author": "Kirby",
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build:lambdas": "lerna run --scope *lambda build",
    "clean": "lerna clean -y",
    "coverage": "lerna run --stream coverage --concurrency 1 -- --color",
    "eslint": "lerna run --parallel eslint -- --color",
    "lint": "run-p eslint stylelint",
    "start:apigateway-ws": "lerna run --stream --scope local-api-gateway-websocket start -- --color",
    "start:client": "lerna run --stream --scope client start -- --color",
    "stylelint": "lerna run --parallel stylelint -- --color",
    "tsc": "lerna run --parallel tsc -- --pretty",
    "verify": "run-s lint tsc coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "25.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "factory.ts": "^0.5.1",
    "faker": "^4.1.0",
    "jest": "25.1.0",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
